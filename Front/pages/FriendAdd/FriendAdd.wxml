<!--pages/FriendAdd/FriendAdd.wxml-->

<!-- 填写框 -->
<view class="inputbox">
    <view class="text">
        就诊人是否已满18周岁
        <!-- <radio-group bindchange="yesorno"> -->
        <radio-group bindchange="{{set1newValue(if18)}}">
            <radio value="y">是</radio>
            <radio value="n">否</radio>
        </radio-group>
    </view>
    <view class="line"></view>
    <view class="text">
        <input placeholder="请填写就诊人姓名" bindinput="inputname" />
    </view>
    <view class="line"></view>
    <view class="text">
        就诊人性别
        <radio-group bindchange="manorwoman">
            <radio value="m">男</radio>
            <radio value="w">女</radio>
        </radio-group>
    </view>
    <view class="line"></view>
    <view class="text">
        <input placeholder="请填写手机号" bindinput="inputphone" />
    </view>
    <view class="line"></view>
    <view class="text">
        <input placeholder="请填写就诊人身份证号"/>
    </view>
    <view class="line"></view>
    <view class="text">
        就诊人关系
    </view>

</view>