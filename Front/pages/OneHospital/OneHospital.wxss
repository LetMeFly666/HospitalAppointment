/* pages/OneHospital/OneHospital.wxss */
page {
    background-color: rgb(242, 242, 242);
}

/* banner */
.bannerIMG {
    /* position: absolute; */
    left: 0;
    top: 0;
    width: 100%;
    display: block;
    z-index: -999;
}

/* 四个按钮 */
.grid-list {
    margin-top: 40rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
    border-radius: 20rpx;
    box-shadow: 0 2rpx 2px 0 rgba(0, 0, 0, 0.24), 0 2rpx 2rpx 0 rgba(0, 0, 0, 0.19);
    background-color: white;
    padding-left: 20rpx;
    padding-right: 20rpx;
    display: flex;
    flex-wrap: wrap;
}

.grid-item {
    width: 50%;
    display: flex;
    margin-bottom: 20rpx;
    box-sizing: border-box;
}

.grid-item text {
    margin: auto;
    font-weight: bold;
}

.grid-item image {
    margin-left: 20rpx;
    margin-right: 20rpx;
    width: 160rpx;
    height: 160rpx;
}

#grid-item-1, #grid-item-2 {
    border-bottom: 1rpx solid #efefef;
}

#grid-item-1, #grid-item-3 {
    border-right: 1rpx solid #efefef;
}

/* 电话 */
.phonecallView {
    margin-top: 40rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
    border-radius: 20rpx;
    box-shadow: 0 2rpx 2px 0 rgba(0, 0, 0, 0.24), 0 2rpx 2rpx 0 rgba(0, 0, 0, 0.19);
    background-color: white;
    padding: 20rpx;
    display: flex;
}

.phonecallView image {
    width: 160rpx;
    height: 160rpx;
}

.phonecallRight {
    margin-left: 40rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.phonecallRightUp {
    font-weight: bold;
    font-size: larger;
    margin-top: 20rpx;
}

.phonecallRightBottom {
    font-size: larger;
}