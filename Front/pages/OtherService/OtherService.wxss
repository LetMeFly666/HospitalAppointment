/* pages/OtherService/OtherService.wxss */
page {
    background-color: rgb(253, 253, 253);
}

/* 其他服务四个字 */
.just4character {
    font-weight: bold;
    text-align: center;
    margin-top: 10rpx;
    font-size: large;
}

/* 8个导航框 */
.eightNavigatorContainer {
    display: flex;
    flex-wrap: wrap;
    margin-top: 20rpx;
    background-color: white;
}

.eachNavigatorOf8 {
    display: flex;
    justify-content: space-between;
    padding: 10rpx;
    width: calc(50% - 10rpx * 2 - 1rpx * 2);
    border: 1rpx solid #efefef;
    border-radius: 4rpx;
}

.forLeftText {
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.leftTextUpper {
    display: block;
    font-weight: bold;
}

.leftTextLower {
    font-size: small;
    margin-top: 10rpx;
    color:dimgray;
}

.forRightPic image {
    width: 180rpx;
    height: 180rpx;
}

/* 2列表 */
.eachNavigatorOf2 {
    display: flex;
    height: 200rpx;
    justify-content: left;
    background-color: white;
    border-radius: 20rpx;
    box-shadow: 1rpx 1rpx 15rpx #dddddd;
    margin: 30rpx 15rpx;
}

.forLeftImage {
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-left: 20rpx;
}

.forLeftImage image {
    width: 120rpx;
    height: 120rpx;
}

.forMiddleText {
    width: 390rpx;
    margin-left: 30rpx;
}

.middleTextUpper {
    font-size: large;
    margin-top: 30rpx;
}

.middleTextLower {
    font-size: small;
    color:dimgray;
    margin-top: 20rpx;
}

.forRightPrice {
    width: 195rpx;
    margin-left: 26rpx;
    margin-right: 20rpx;
}

.forRightPrice {
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.forRightPrice2TextContainer {
    color: #a98033;
}

.truePrice {
    font-weight: bold;
    font-size: x-large;
}